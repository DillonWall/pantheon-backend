type User {
  username: String!
  passwordhash: String!
}

type Query {
  user: User!
}

input UserData {
  username: String!
  password: String!
}

type AuthResponse {
  token: String
}

type Mutation {
  register(input: UserData!): AuthResponse!
  login(input: UserData!): AuthResponse!
  verify(token: String!): Boolean!
}
